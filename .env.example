# ============================================================================
# AIRTABLE API CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Airtable API Key (Personal Access Token)
# Get this from: https://airtable.com/create/tokens
AIRTABLE_API_KEY=your_api_key_here

# Airtable Base ID
# Find this in your Airtable base URL: https://airtable.com/[BASE_ID]/...
AIRTABLE_BASE_ID=your_base_id_here

# ============================================================================
# TABLE NAMES
# ============================================================================
# These should match the table names in your Airtable base

# Source table containing messy combined data
SOURCE_TABLE_NAME=Foundation Grants Data

# Target normalized tables
TARGET_GRANTS_TABLE=Grants
TARGET_REPORTS_TABLE=Progress_Reports
TARGET_VISITS_TABLE=Site_Visits

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# Set to TRUE to enable debug logging
DEBUG_MODE=FALSE

# Set to TRUE to backup data before operations
BACKUP_BEFORE_WRITE=TRUE

# Maximum number of retries for API calls
MAX_API_RETRIES=3
